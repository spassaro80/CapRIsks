{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PreLaunchTask for Run RiskManagement",
      "type": "process",
      "command": "npx",
      "args": [
        "dev-cap-tools",
        "gen-entrypoint"
      ],
      "dependsOn": [
        "BuildMDK"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "dpt.ptdeploy",
      "label": "Deploy RiskManagement",
      "taskType": "Deploy"
    },
    {
      "type": "dpt.ptdeploy",
      "label": "Enable Discovery and Deploy RiskManagement",
      "taskType": "Deploy",
      "enableDiscovery": "true"
    },
    {
      "label": "npm-install",
      "type": "process",
      "command": "npm",
      "args": [
        "install"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "BuildMDK",
      "type": "process",
      "command": "npx",
      "args": [
        "mdk",
        "build",
        "--target",
        "module",
        "--ui5",
        "--recursive"
      ],
      "dependsOn": [
        "npm-install"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "dev-project",
      "type": "process",
      "command": "npx",
      "args": [
        "dev-cap-tools",
        "gen-entrypoint"
      ],
      "dependsOn": [
        "BuildMDK"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "install-app-router",
      "type": "shell",
      "command": "if [ ! -d node_modules ]; then npm i; fi",
      "options": {
        "cwd": "${workspaceFolder}/local-router"
      }
    },
    {
      "label": "start-app-router",
      "type": "shell",
      "command": "eval $(cat ../env/.envXsuaa)  npm start",
      "options": {
        "cwd": "${workspaceFolder}/local-router"
      },
      "dependsOn": [
        "install-app-router"
      ],
      "isBackground": true,
      "problemMatcher": [
        {
          "severity": "info",
          "pattern": [
            {
              "regexp": ".*Application router is listening on port.*",
              "file": 0,
              "location": 0,
              "message": 0
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".*Application router is listening on port.*"
          }
        }
      ]
    },
    {
      "label": "stop-app-router",
      "type": "shell",
      "command": "kill $(ps aux | grep -vE 'grep|bash' | grep 'approuter' | awk '{print $2}')",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "PreLaunchTask for Run RiskManagement with Live Data",
      "type": "process",
      "command": "npx",
      "args": [
        "dev-cap-tools",
        "gen-entrypoint"
      ],
      "dependsOn": [
        "BuildMDK"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}